        stage('Run E2E test and Generate E2E test report') {
            steps {
                dir('./back-end') {
                    sh 'yarn run test:e2e:cov'
                    publishHTML target: [
                        allowMissing: false,
                        alwaysLinkToLastBuild: false,
                        keepAll: true,
                        reportDir: './coverage/lcov-report',
                        reportFiles: 'index.html',
