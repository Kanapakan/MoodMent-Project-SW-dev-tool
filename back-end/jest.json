{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "reporters": [
    "default",
    [
      "../node_modules/jest-html-reporter",
      {
        "pageTitle": "Unit Test Report",
        "outputPath": "./coverage/report.html"
      }
    ]
  ]
}
